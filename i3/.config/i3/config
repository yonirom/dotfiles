    position bottom
    status_command /usr/bin/i3status-rs
    colors {
        separator #666666
        background #000000
        statusline #dddddd
        focused_workspace #A27647 #A27647 #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}

